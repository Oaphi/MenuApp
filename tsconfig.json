{
    "compilerOptions": {
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "skipLibCheck": true,
        "types": ["node", "google-apps-script", "mocha", "chai"],
        "target": "es2019",
        "lib": ["esnext"],
        "downlevelIteration": true,
        "pretty": true,
        "declaration": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "outFile": "dist/index.js",
        "rootDir": "src"
    },
    "include": ["src"],
    "exclude": ["dist", "node_modules"]
}
